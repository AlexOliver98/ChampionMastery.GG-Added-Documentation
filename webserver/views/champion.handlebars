{{#extend "layout"}}
	{{#content "title"}}{{champion.name}} - ChampionMastery.GG{{/content}}

	{{#content "meta-description" ~}}
		Highscores for players with the {{#noop}}<!--This block is used for spacing. -->{{/noop}}
		{{~#eq champion.id -1 ~}}
			most total champion mastery points
		{{~else eq champion.id -2 ~}}
			highest combined champion mastery level
		{{~else ~}}
			most champion mastery points on {{champion.name}}
		{{~/eq ~}}
	{{/content}}

	{{#content "css"}}
		<link rel="stylesheet" type="text/css" href="/css/champion.css">
	{{/content}}

	{{#content "scripts"}}
		<script src="/js/rgea.js"></script>
	{{/content}}

	{{#content "body"}}
		<h1>
			<img id="championIcon" src="{{dragonUrl}}/img/championIcons/{{champion.icon}}">
			<span>{{champion.name}}</span>
		</h1>
		<div id="disclaimer">
			Players must be looked up on this site to appear on this list
		</div>
		<div id="container">
			<table class="well">
				<thead>
					<tr>
						<th>Place</th>
						<th>Name (Region)</th>
						<th>{{#eq this.champion.id -2}}Total Level{{else}}Mastery Points{{/eq}}</th>
					</tr>
				</thead>
				<tbody>
					{{#each scores}}
						<tr>
							<td>
								{{ordinalize (add @index 1)}}
							</td>
							<td>
								{{#if this}}
									{{#if this.name}}
										<a href="/summoner?summoner={{encodeURI this.name}}&region={{this.region}}">
											{{this.name}} ({{this.region}})
										</a>
									{{else}}
										<a href="/privacy">
											[HIDDEN] ({{this.region}})
										</a>
									{{/if}}
								{{else}}
									Nobody
								{{/if}}
							</td>
							<td data-format-number="{{#if this}}{{this.points}}{{else}}0{{/if}}">
								{{#if this}}
									{{this.points}}
								{{else}}
									0
								{{/if}}
							</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
		<div class="responsiveAd">
			<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5598552437938145"
					crossorigin="anonymous"></script>
			<!-- CMGG/champion-footer-responsive -->
			<ins class="adsbygoogle"
				 style="display:block"
				 data-ad-client="ca-pub-5598552437938145"
				 data-ad-slot="6258924078"
				 data-ad-format="auto"
				 data-full-width-responsive="true"></ins>
			<script>
				(adsbygoogle = window.adsbygoogle || []).push({});
			</script>
		</div>
	{{/content}}
{{/extend}}
